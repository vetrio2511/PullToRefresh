<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PullToRefreshView">
        <attr name="titleText" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="showTitle" format="boolean" />
        <attr name="progressName" format="string">
            <enum name="LineIndicator" value="0"/>
            <enum name="BallIndicator" value="1"/>
        </attr>
        <attr name="progressColor" format="color"/>
    </declare-styleable>

</resources>